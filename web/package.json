{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.18.1",
    "lodash": "^4.17.10",
    "react": "^16.8.6",
    "react-contextmenu": "^2.11.0",
    "react-dom": "^16.8.6",
    "react-icons": "3.7.0",
    "react-jsonschema-form": "^1.7.0",
    "react-notifications": "^1.4.3",
    "react-router-dom": "5.0.1",
    "react-scripts": "3.1.1",
    "react-styled-flexboxgrid": "3.1.0",
    "styled-components": "^4.3.2",
    "to-json-schema": "^0.2.1",
    "typescript": "^3.5.2",
    "react-beautiful-dnd": "^11.0.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "tsc": "tsc",
    "coverage": "react-scripts test --coverage --watchAll=false",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prettier": "prettier --write './src/**/*.{ts,tsx,js,css,html,json}'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run coverage"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "./src/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.1.9",
    "@storybook/addon-links": "^5.1.9",
    "@storybook/addon-storyshots": "^5.1.9",
    "@storybook/addons": "^5.1.9",
    "@storybook/react": "^5.1.9",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.135",
    "@types/node": "^12.0.12",
    "@types/react": "^16.8.23",
    "@types/react-beautiful-dnd": "^11.0.3",
    "@types/react-dom": "^16.8.4",
    "@types/react-jsonschema-form": "^1.6.2",
    "@types/styled-components": "^4.1.18",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "react-test-renderer": "^16.8.6",
    "require-context.macro": "^1.0.4"
  }
}
