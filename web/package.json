{
  "name": "@dmt/root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "yarn workspace @dmt/web run start",
    "build": "yarn workspace @dmt/web run build",
    "test": "yarn build && jest test",
    "test:watch": "jest --watch --coverage --no-cache",
    "test:watchAll": "yarn build && jest --watchAll --coverage --notify"
  },
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "workspaces": [
    "app",
    "plugins/*",
    "custom-plugins/*"
  ],
  "nohoist": [
    "workspaces/**/webpack-dev-server",
    "**/babel-loader"
  ]
}
