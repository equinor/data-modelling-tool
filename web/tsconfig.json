{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "target": "es5",
    "composite": false,
    "useUnknownInCatchVariables": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["jest", "node", "mocha"]
  },
  "exclude": ["node_modules", "src/**/*.spec.ts", "build", "dist", "tests", "**/*.test.tsx"]
}
