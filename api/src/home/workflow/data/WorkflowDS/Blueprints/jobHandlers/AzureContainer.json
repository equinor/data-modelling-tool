{
  "type": "system/SIMOS/Blueprint",
  "name": "AzureContainer",
  "description": "Description of a executable job running as an Azure Container Instance",
  "extends": ["system/SIMOS/DefaultUiRecipes", "/jobHandlers/Container", "/jobHandlers/JobHandler"],
  "attributes": [
     {
      "name": "type",
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "label": "Type",
      "optional": false
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "crUsername",
      "optional": true
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "azureLocation",
      "optional": true,
      "default": "Norway East"
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "crPassword",
      "optional": true
    }, {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "computePower",
      "default": "low",
      "optional": true,
      "description": "should be an enum. 'high' or 'low'. Or just pass cpu and mem directly"
    }
  ],
  "uiRecipes": [
    {
      "name": "Edit",
      "type": "system/SIMOS/UiRecipe",
      "plugin": "edit-azure-container",
      "configType": "",
      "category": "edit"
    },
    {
      "name": "Tabs",
      "type": "system/SIMOS/UiRecipe",
      "plugin": "tabs",
      "category": "container"
    }
  ]
}
