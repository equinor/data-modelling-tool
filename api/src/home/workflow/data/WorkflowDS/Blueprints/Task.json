{
  "name": "Task",
  "abstract": true,
  "type": "system/SIMOS/Blueprint",
  "extends": [
    "system/SIMOS/NamedEntity"
  ],
  "description": "Task holds parameters that is used to create different job instances",
  "attributes": [
    {
      "name": "label",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "string"
    },
    {
      "name": "outputTarget",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "string",
      "description": "Reference to a location where the result should be stored (path format)",
      "optional": true
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "inputType",
      "label": "Input type",
      "description": "Reference to a Blueprint",
      "optional": true
    },
    {
      "attributeType": "string",
      "type": "AnalysisPlatformDS/Blueprints/SIMAApplicationInput",
      "name": "applicationInput",
      "label": "Input",
      "description": "Input data for container",
      "optional": true
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "outputType",
      "label": "Output type",
      "description": "Reference to a Blueprint",
      "optional": true
    },
    {
      "attributeType": "/jobHandlers/JobHandler",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "runner",
      "label": "Runner",
      "description": "Job runner that will handle jobs from this task",
      "optional": true
    }
  ],
    "uiRecipes": [
    {
      "name": "Tabs",
      "label": "Edit",
      "type": "system/SIMOS/UiRecipe",
      "plugin": "tabs",
      "category": "container",
      "config": {
        "type": "system/SIMOS/UiPluginSelectorProps",
        "subCategories": ["edit"]
      }
    },
      {
      "name": "Yaml",
      "label": "View",
      "type": "system/SIMOS/UiRecipe",
      "plugin": "yaml-view",
      "category": "view"
    },
    {
      "name": "Edit",
      "type": "system/SIMOS/UiRecipe",
      "plugin": "edit-task",
      "category": "edit"
    }
  ]
}
