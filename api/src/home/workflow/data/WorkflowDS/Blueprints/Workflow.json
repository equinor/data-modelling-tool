{
  "name": "Workflow",
  "type": "system/SIMOS/Blueprint",
  "extends": [
    "system/SIMOS/DefaultUiRecipes"
  ],
  "description": "A workflow is made up of one or more tasks that can run sequentially or in parallel",
  "attributes": [
    {
      "name": "label",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "string"
    },
    {
      "name": "schedule",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "string",
      "optional": true
    },
    {
      "name": "tasks",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "/Task",
      "dimensions": "*"
    },
    {
      "name": "runs",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "/WorkflowRun",
      "dimensions": "*",
      "description": "A task can be used to run multiple jobs"
    }
  ]
}