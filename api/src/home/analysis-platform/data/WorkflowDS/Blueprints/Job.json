{
  "name": "Job",
  "abstract": true,
  "type": "system/SIMOS/Blueprint",
  "extends": ["system/SIMOS/NamedEntity"],
  "attributes": [
    {
      "name": "label",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "string",
      "optional": true
    },
    {
      "name": "triggeredBy",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "string",
      "optional": true
    },
    {
      "attributeType": "object",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "applicationInput",
      "label": "Input",
      "description": "Input entity to a job",
      "contained": false,
      "optional": true
    },
    {
      "name": "started",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "string",
      "optional": true
    },
    {
      "name": "ended",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "string",
      "optional": true
    },
    {
      "name": "outputTarget",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "string",
      "optional": true
    },
    {
      "name": "result",
      "type": "system/SIMOS/BlueprintAttribute",
      "attributeType": "object",
      "contained": false,
      "optional": true
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "runner",
      "label": "Runner",
      "description": "JobRunner that will handle this job",
      "optional": true
    },
    {
      "attributeType": "string",
      "type": "system/SIMOS/BlueprintAttribute",
      "name": "referenceTarget",
      "label": "Reference target",
      "description": "Dotted id to an analysis entity's job result. Should be on the format: entityId.jobs.*index*.result. Must be generated at run time since the index can vary.",
      "optional": true
    }
  ],
  "uiRecipes": [
    {
      "name": "Job",
      "type": "system/SIMOS/UiRecipe",
      "plugin": "job",
      "category": "view"
    },
    {
      "name": "Yaml",
      "type": "system/SIMOS/UiRecipe",
      "plugin": "yaml-view",
      "category": "view"
    }
  ]
}
