{
  "type": "system/SIMOS/Blueprint",
  "name": "Application",
  "description": "This describes an application",
  "attributes": [
    {
      "type": "string",
      "name": "name"
    },
    {
      "type": "string",
      "name": "type",
      "default": "system/SIMOS/Application"
    },
    {
      "type": "string",
      "name": "description",
      "default": "Create an application by exporting Blueprints and Entities, and configuring context menus."
    },
    {
      "type": "string",
      "name": "packages",
      "dimensions": "*",
      "description": "Blueprint Packages to be internalized. Only supports packages within same DataSource",
      "label": "Packages"
    },
    {
      "type": "string",
      "name": "entities",
      "dimensions": "*",
      "description": "Entity Packages to be internalized. Only supports packages within same DataSource",
      "label": "Entities"
    },
    {
      "type": "string",
      "name": "models",
      "dimensions": "*",
      "description": "Models to create in application. Only supports packages within same DataSource",
      "label": "Models"
    },
    {
      "type": "system/SIMOS/Action",
      "name": "actions",
      "description": "Runnable actions",
      "dimensions": "*"
    }
  ],
  "storageRecipes": [],
  "uiRecipes": [
    {
      "name": "INDEX",
      "plugin": "INDEX",
      "type": "system/SIMOS/UiRecipe",
      "attributes": [
        {
          "name": "actions",
          "type": "system/SIMOS/Runnable",
          "contained": false
        }
      ]
    },
    {
      "type": "system/SIMOS/UIRecipe",
      "name": "Edit",
      "plugin": "EDIT_PLUGIN",
      "attributes": [
        {
          "name": "packages",
          "type": "system/SIMOS/UiAttribute",
          "field": "packages"
        },
        {
          "name": "entities",
          "type": "system/SIMOS/UiAttribute",
          "field": "packages"
        },
        {
          "name": "models",
          "type": "system/SIMOS/UiAttribute",
          "field": "packages"
        }
      ]
    }
  ]
}
