{
  "#########This is not in use": "Use as a reference of what we could/should support",
  "schema": {
    "type": "object",
    "properties": {
      "documentType": {
        "attributeType": "string", "type": "system/SIMOS/BlueprintAttribute",
        "title": "documentType",
        "default": ""
      },
      "name": {
        "attributeType": "string", "type": "system/SIMOS/BlueprintAttribute",
        "title": "Name",
        "minLength": 3,
        "pattern": "^[a-zA-Z0-9_\\-]*$"
      },
      "host": {
        "attributeType": "string", "type": "system/SIMOS/BlueprintAttribute",
        "title": "Hostname"
      },
      "port": {
        "attributeType": "integer", "type": "system/SIMOS/BlueprintAttribute",
        "title": "port",
        "default": 27017
      },
      "username": {
        "attributeType": "string", "type": "system/SIMOS/BlueprintAttribute",
        "title": "Username"
      },
      "password": {
        "attributeType": "string", "type": "system/SIMOS/BlueprintAttribute",
        "title": "Password"
      },
      "tls": {
        "attributeType": "boolean", "type": "system/SIMOS/BlueprintAttribute",
        "title": "TLS",
        "default": false
      },
      "database": {
        "attributeType": "string", "type": "system/SIMOS/BlueprintAttribute",
        "title": "Database"
      },
      "collection": {
        "attributeType": "string", "type": "system/SIMOS/BlueprintAttribute",
        "title": "Collection"
      }
    },
    "required": [
      "name",
      "database",
      "collection",
      "host",
      "documentType",
      "port",
      "tls"
    ]
  },
  "uiSchema": {
    "password": {
      "ui:widget": "password",
      "ui:help": "Hint: Make it strong!"
    },
    "name": {
      "ui:help": "Must be globaly unique. May only contain [a-z,A-Z,0-9,-,_]'"
    },
    "documentType": {
      "ui:widget": "hidden"
    }
  }
}
