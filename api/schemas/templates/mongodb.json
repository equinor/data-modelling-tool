{
  "meta": {
    "name": "mongodb-datasource-template",
    "description": "Create form for a Mongodb data source"
  },
  "schema": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "title": "Type",
        "default": "mongodb"
      },
      "documentType": {
        "type": "string",
        "title": "Type",
        "default": "mongodb"
      },
      "host": {
        "type": "string",
        "title": "Hostname"
      },
      "port": {
        "type": "integer",
        "title": "port",
        "default": 27017
      },
      "username": {
        "type": "string",
        "title": "Username"
      },
      "password": {
        "type": "string",
        "title": "Password"
      },
      "tls": {
        "type": "boolean",
        "title": "TLS",
        "default": false
      },
      "name": {
        "type": "string",
        "title": "Name",
        "minLength": 3
      },
      "database": {
        "type": "string",
        "title": "Database"
      },
      "collection": {
        "type": "string",
        "title": "Collection"
      }
    },
    "required": ["name"]
  },
  "uiSchema": {
    "password": {
      "ui:widget": "password",
      "ui:help": "Hint: Make it strong!"
    }
  }
}
